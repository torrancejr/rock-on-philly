<!DOCTYPE html>
<html>
  <head>
    <title>ReviewSite</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface|Roboto" rel="stylesheet">
  </head>

  <body>
    <ul>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
        <li>
          <%= link_to "View Users", admin_users_path %>
        </li>
        <li>
          <%= link_to "Create Venue", new_venue_path %>
        </li>
        <% end %>
        <li>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "Edit/Delete Profile", edit_user_registration_path %>
        </li>
        <% else %>
        <li>
          <%= link_to "Sign In", new_user_session_path %>
        </li>
        <li>
          <%= link_to "Sign Up", new_user_registration_path %>
        </li>
      <% end %>

    </ul>

    <% flash.each do |key, value| %>
      <%= value %>
    <% end %>

    <%= yield %>
  </body>
</html>
